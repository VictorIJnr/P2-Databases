<html>  
    <head>
        <title>Databases P2</title>
            
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <% include ./partials/headercss.ejs%>
        <link href="/css/standard.css" rel="stylesheet">
        <link href="/css/authors.css" rel="stylesheet">
        <link href="/css/books.css" rel="stylesheet">
        <link href="/css/ionicons.min.css" rel="stylesheet">

        <!--Only needed if running on the host servers-->
        <link href="/P2 - Front-end Design/public/css/standard.css" rel="stylesheet">
        <link href="/P2 - Front-end Design/public/css/authors.css" rel="stylesheet">
        <link href="/P2 - Front-end Design/public/css/books.css" rel="stylesheet">
        <link href="/P2 - Front-end Design/public/css/ionicons.min.css" rel="stylesheet">

        <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Marck+Script" rel="stylesheet">

        <!-- <script src="/js/authors.js"></script> -->
        <style>
            #all-books h1,
            #all-books p {
                text-align: center;
            }
        </style>
    </head>
    
    <body>  
        <% include ./partials/header.ejs %>
        <section id="searchbar">
            <form href="//" id="search-form" method="POST">
                <input id="search" name="author" type="text" placeholder="Find an author">
                <input type="submit" value="Search">
            </form> 
        </section>

        <section id="all-books">
            <h1>All books for <%= author %></h1>
            <p><%= rows[0].Biography %></p>
            <% rows.forEach(function(row) { %>
                <div class="book-entry">
                    <h2 class="book-title"><%=row.Title%></h2>
                    <%
                        var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                        row["Publication Date"] = row["Publication Date"].toLocaleDateString("en-US", options);
                        row["Running Time"] = row["Running Time"].substring(0, 8);
                    %>
                    <ul>
                        <li><strong>ISBN</strong> - <%=row.ISBN%></li>
                        <li><strong>Publisher</strong> - <%=row["Publisher Name"]%></li>
                        <li><strong>Publication Date</strong> - <%=row["Publication Date"]%></li>
                        <li><strong>Narrator</strong> - <%=row.Narrator%></li>
                        <li><strong>Running Time</strong> - <%=row["Running Time"]%></li>
                        <li><strong>Age Rating</strong> - <%=row["Age Rating"]%></li>
                        <li><strong>Price</strong> - Â£<%=row.Price%></li>
                    </ul>
                </div>
            <% }); %>
        </section>
    </body>
</html>